<script>
    function sendEmail() {
      var xhr = new XMLHttpRequest();
      xhr.open('POST', '/send-email', true);
      xhr.setRequestHeader('Content-Type', 'application/json');
      xhr.onload = function() {
        if (xhr.status === 200) {
          console.log('Email sent successfully');
        } else {
          console.error('Error sending email');
        }
      };
      xhr.send();
    }
